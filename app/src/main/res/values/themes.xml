<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RoboDoc" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:fontFamily">@font/montserrat</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/colorAccentDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorButtonDark</item>
        <item name="colorSecondaryVariant">@color/colorButtonSecondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorAccentDark</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ToolbarMenuItem" parent="Theme.RoboDoc">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="SwitchTheme" parent="Theme.RoboDoc">
        <item name="colorSecondary">@color/colorButton</item>
        <item name="colorSurface">@color/colorButtonRipple</item>
        <item name="colorOnSurface">@color/colorAccent</item>
    </style>

</resources>