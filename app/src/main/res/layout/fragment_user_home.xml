<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    android:orientation="vertical"
    tools:context=".fragments.user.UserFragmentHome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/colorButton"
                app:cardCornerRadius="6dp"
                app:cardElevation="6dp">

                <Button
                    android:id="@+id/btnChooseInput"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:text="Choose Input"
                    android:textColor="@color/colorAccentDark"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:rippleColor="@color/colorButtonRipple"
                    app:strokeWidth="0dp" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/colorButton"
                app:cardCornerRadius="6dp"
                app:cardElevation="6dp">

                <Button
                    android:id="@+id/btnSetAlarm"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:text="Set Reminder"
                    android:textColor="@color/colorAccentDark"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:rippleColor="@color/colorButtonRipple"
                    app:strokeWidth="0dp" />
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp"
            app:cardBackgroundColor="@color/colorButton"
            app:cardCornerRadius="6dp"
            app:cardElevation="6dp">

            <Button
                android:id="@+id/btnViewDoctors"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:text="View Doctors List"
                android:textColor="@color/colorAccentDark"
                android:textSize="17sp"
                android:textStyle="bold"
                app:rippleColor="@color/colorButtonRipple"
                app:strokeWidth="0dp" />
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvbViewRecords"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/colorButton"
                app:cardCornerRadius="6dp"
                app:cardElevation="6dp">

                <Button
                    android:id="@+id/btnViewRecords"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:text="View Records"
                    android:textColor="@color/colorAccentDark"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:rippleColor="@color/colorButtonRipple"
                    app:strokeWidth="0dp" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvbViewStats"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/colorButton"
                app:cardCornerRadius="6dp"
                app:cardElevation="6dp">

                <Button
                    android:id="@+id/btnViewStats"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:text="View Statistics"
                    android:textColor="@color/colorAccentDark"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:rippleColor="@color/colorButtonRipple"
                    app:strokeWidth="0dp" />
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>